/* components/mymt/mymt.wxss */

.mt {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin:10rpx 0;
}
.mtImg {
  width: 205rpx;
  height: 152rpx;
}

.mtCen {
  width: 500rpx;
}

.pic {
  width: 100%;
  height: 100%;
}

.cenTitle1 {
  font-family: '方正兰亭纤黑_GBK Regular', '方正兰亭纤黑_GBK';
  font-size: 12pt;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cenTitle2 {
  font-family: '方正兰亭纤黑_GBK Regular', '方正兰亭纤黑_GBK';
  font-size: 12pt;
  color: #aaa;
  display: flex;
  justify-content: space-between;
}
.cenTitle3{
  vertical-align: super;
}
.cenTitle4 {
  margin-left: 20rpx;
}

.cenTitle5 {
  color: #f00;
}

.cenTitle6, .cenTitle7 {
  vertical-align: middle;
}

.cenTitle6 {
  width: 27rpx;
  height: 27rpx;
}

.cenTitle7 {
  margin-left: 10rpx;
  font-size: 12pt;
}
.cenTitle8{
  display: flex;
  overflow:auto;
}
.cenTitle9 {
  white-space: nowrap;
  box-sizing: border-box;
  margin-right: 10rpx;
  padding: 5rpx 20rpx ;
  font-size: 12pt;
  text-align: center;
  border-radius: 8rpx;
}
.mtHr{
  height: 10rpx;
  background: #ddd;
}
