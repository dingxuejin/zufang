/* pages/zhifu/zhifu.wxss */

#zhifu {
  padding-top: 30rpx;
}
.fangdong1 {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 38rpx;
  padding:15rpx 20rpx;
}

.fangdong2 {
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}

.fangdong3 {
  line-height: 50rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
}

.fangdong4 {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.fangdong5 {
  width: 35rpx;
  height: 35rpx;
}

.zhifu1 {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
}

.zhifu2 {
  width: 200rpx;
  height: 200rpx;
}

.zhifu3 {
  width: 500rpx;
}

.zhifu4 {
  width: 100%;
  height: 100%;
}

.zhifu5 {
  padding: 10rpx;
  font-size: 40rpx;
}

.zhifu6 {
  padding: 10rpx;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.zhifu7 {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-between;
  align-items: center;
  text-align: center;
  font-size: 28rpx;
  color: #555;
}

.zhifu8 {
  white-space: nowrap;
  padding-right: 16rpx;
}

.zhifu9 {
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
  font-size: 32rpx;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.zhifu10 {
  width: 750rpx;
  border-top: 1rpx solid #ddd;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.zhifu11 {
  color: #f00;
  padding: 20rpx;
  font-size: 36rpx;
}

.zhifu12 {
  border-radius: 0;
  background: #f00;
  color: #fff;
}

.hr {
  height: 10rpx;
  background: #ddd;
}

.guanggao {
  text-align: right;
  background: rgba(252, 232, 234, 0.5);
  padding: 20rpx 40rpx;
  font-size: 30rpx;
}
.padText{
  line-height: 40rpx;
}