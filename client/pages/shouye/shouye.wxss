#search {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 70rpx;
  padding:10rpx 0;
}

.city, .msg, .search {
  font-size: 12pt;
}

.city, .msg {
  width: 80rpx;
}

.search {
  width: 550rpx;
}

#banner {
  width: 750rpx;
  height: 300rpx;
}

#banner .banner1 {
  width: 100%;
  height: 100%;
}

#banner image {
  width: 100%;
  height: 100%;
}
.banner2{
  width:100%;
  height: 100%;
}

#nav {
  display: flex;
  justify-content: center;
  align-items: center;
}

#nav .nav1 {
  margin: 10rpx 30rpx 0;
  width: 101rpx;
  height: 101rpx;
  position: relative;
}

#nav .nav1 .nav2 {
  width: 100%;
  height: 100%;
}

#nav .nav1 .nav3, #nav .nav1 .nav4 {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

#nav .nav1 .nav3 {
  width: 50%;
  height: 50%;
  top: 10%;
}

#nav .nav1 .nav4 {
  width: 100%;
   bottom: 10rpx; 
  font-size: 30rpx;
  text-align: center;
  color: #fff;
}
#ppgy .ppgy{
  display: flex;
  justify-content: space-around;
}
#ppgy .ppgy1{
  width:214rpx;
  height: 159rpx;
  overflow: hidden;
  position: relative;
}
#ppgy .ppgy2{
  width:100%;
  height:100%;
}
#ppgy .ppgy3{
  position: absolute;
  bottom:10rpx;
  left: 10rpx;
  font-size: 30rpx;
  background: #000;
  opacity: 0.7;
  color:#fff;
  border-radius: 5rpx;
}

#wnjx .wnjx{
  display: flex;
  justify-content: space-around;
}
#wnjx .wnjx1{
  width:345rpx;
  height: 221rpx;
  overflow: hidden;
  position: relative;
}
#wnjx .wnjx2{
  width:100%;
  height:100%;
}